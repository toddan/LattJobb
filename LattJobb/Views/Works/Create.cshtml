@model Gottknark.Models.Work

@{
    ViewBag.Title = "Create";
}
<div class="col-md-12">
    <div class=" panel panel-default">
        <div class="panel-heading">Lägg till annons</div>
        <div class="panel-body">
            @using (Html.BeginForm("Create","Works",FormMethod.Post,new{@class = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title)
                    @Html.TextBoxFor(model => model.Title,new{@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Title)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.About)
                    @Html.TextAreaFor(model => model.About, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.About)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price)
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Price)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Region)
                    @Html.TextBoxFor(model => model.Region, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Region)
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Tags) (Se till att ha mellanrum mellan var tag)
                    @Html.TextBoxFor(model => model.Tags, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tags)
                </div>

                <div class="form-group">
                    <input id="image" value="Välj bild" type="file" name="image" />
                </div>
                
                <p>
                    <input type="submit" value="Lägg till" />
                </p>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
