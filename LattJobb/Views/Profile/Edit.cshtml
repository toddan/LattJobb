@model Gottknark.Models.Profile

@{
    ViewBag.Title = "Profilinstälnningar";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">Betyg och kommentarer</div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Surname)
                        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Surname)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email)
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone)
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Info)
                        @Html.TextAreaFor(model => model.Info, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Info)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NumerOfResults)
                        @Html.TextBoxFor(model => model.NumerOfResults, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NumerOfResults)
                    </div>

                    if (Roles.IsUserInRole("Employee"))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tags) (Glöm inte att ha mellanrum mellan var tag)
                            @Html.TextBoxFor(model => model.Tags, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Tags)
                        </div>
                    }
                    <div class="form-group">
                        @Html.HiddenFor(model => model.Image)
                        <input id="image" value="Välj bild" type="file" name="image" />
                    </div>

                    <p>
                        <input type="submit" value="Spara" />
                    </p>
                }
                <div>
                    @Html.ActionLink("Profil", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
