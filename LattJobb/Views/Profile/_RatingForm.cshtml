@model Gottknark.ViewModels.ProfileViewModel

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">Betyg och kommentarer</div>
            <div class="panel-body">
                @using (Html.BeginForm("AddRating", "Profile", FormMethod.Post, new { @class = "form" }))
                {
                    @Html.HiddenFor(model => model.UserProfile.UserId)
                    @Html.HiddenFor(model => model.UserRating.UserId)
                    <div class="form-group">
                            @Html.LabelFor(model => model.UserRating.Rating)
                            @Html.DropDownListFor(model => model.UserRating.Rating, Model.RatingOptions) / 5

                        @Html.ValidationMessageFor(model => model.UserRating.Rating)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserRating.Comment)
                        @Html.TextAreaFor(model => model.UserRating.Comment, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserRating.Comment)
                    </div>
                    <p>
                        <input type="submit" value="spara" />
                    </p>
                }
            </div>
        </div>
    </div>
</div>
